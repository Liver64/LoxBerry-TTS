#!/bin/bash
set -o pipefail

# 1) Basis-Variablen
: "${LBHOMEDIR:=/opt/loxberry}"
: "${LBPLOG:=/opt/loxberry/log/plugins}"
: "${LBPDATA:=/opt/loxberry/data/plugins}"

PACKAGE="text2speech"
NAME="TTS-Monitor"
LOGDIR="${LBPLOG%/}/${PACKAGE}"
FILENAME="${LOGDIR}/monitor.log"
APPEND=1

# 2) Verzeichnis garantieren
mkdir -p "$LOGDIR"

# 3) Logging-Library laden
. "$LBHOMEDIR/libs/bashlib/loxberry_log.sh"

# 4) Logging starten
LOGSTART "TTS-Monitor started."

# 5) Services (ohne sudo im Script; Service-User/Unit regeln das)
systemctl daemon-reload
systemctl enable mqtt-service-tts
systemctl start  mqtt-service-tts
